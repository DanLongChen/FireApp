<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".RadioButtonActivity">
    <!--在一组里面进行单选，如男和女，需要结合RadioGroup-->
    <!--checked表示是否默认选中，要加上checked属性的话需要在每个Radio加上id-->
    <RadioGroup
        android:id="@+id/rg_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rg_1_rb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rg_1_rb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_1"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <!--button属性设置为null，前面的圆圈就会被去除-->
        <RadioButton
            android:id="@+id/rg_2_rb_1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="男"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/btn_radio"
            android:checked="true"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rg_2_rb_2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="女"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/btn_radio"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
    </RadioGroup>


</RelativeLayout>