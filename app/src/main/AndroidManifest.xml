<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chiron.fireapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".recyclerview.LinearRecyclerViewActivity"></activity>
        <activity android:name=".recyclerview.RecyclerViewActivity" />
        <activity android:name=".GridViewActivity" />
        <activity android:name=".ListViewActivity" />
        <activity android:name=".ImageViewActivity" />
        <activity android:name=".CheckBoxActivity" />
        <activity android:name=".RadioButtonActivity" />
        <activity android:name=".TestActivity" />
        <activity android:name=".PlayActivity" />
        <activity android:name=".StudyActivity" />
        <activity android:name=".SlideActivity" />
        <activity android:name=".MainActivity">

            <!-- 设置项目启动的第一个activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>